<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idValue"
        android:layout_width="246dp"
        android:layout_height="53dp"
        android:layout_marginTop="188dp"
        android:autoText="false"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Введите имя"
        android:inputType="textPersonName|text"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="28dp"
        android:text="Получить зарплату"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/idValue"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/idValue"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintVertical_bias="0.473" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="TextView"
        android:textColor="#84EC0E"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/passView"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/passView"
        app:layout_constraintTop_toBottomOf="@+id/passView" />

    <EditText
        android:id="@+id/passView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:hint="Введите пароль"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/idValue"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="@+id/idValue"
        app:layout_constraintTop_toBottomOf="@+id/idValue" />

</androidx.constraintlayout.widget.ConstraintLayout>